<p id="notice"><%= notice %></p>
<h1>Sign in</h1>

<%= form_tag session_path do %>
    <div class="field">
      Username:<br />
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      Password:<br />
      <%= password_field_tag :password, params[:password] %>
    </div>
    <%= submit_tag "Log in" %>
<% end %>
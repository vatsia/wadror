<p id="notice"><%= notice %></p>

<% cache @brewery do %>
<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label label-info"></span>
  <% end %>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>

</h2>


<p>
  <i>
    Established in
    <%= @brewery.year %>
  </i>
</p>

<p>
  <strong>Beers:</strong>
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
      Brewery's beers has not yet been rated!
  <% else %>
      Has <%= pluralize(@brewery.ratings.count, "rating") %> and average is <%= round(@brewery.average_rating) %>
  <% end %>
</p>
<% end %>
<%= edit_and_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path, class:"btn btn-default" %>
